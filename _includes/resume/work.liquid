<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <!-- Date column -->
        <div class="col-2 text-center" style="padding-right: 20px;">
          <!-- Adjusted padding and fixed class names -->
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date = startDate | append: ' - ' | append: endDate %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <div class="date-badge-wrapper" style="padding-bottom: 10px;">
            <!-- Added div for better control -->
            <span class="badge font-weight-bold bg-danger text-uppercase" style="width: 100%; display: block;">{{ date }}</span>
          </div>
          {% if content.location %}
            <p class="location"><i class="fa-solid fa-location-dot"></i> {{ content.location }}</p>
          {% endif %}
        </div>
        <!-- Content column -->
        <div class="col-10">
          <h6 class="title font-weight-bold">
            <a href="{{ content.url }}">{{ content.position }}</a>
          </h6>
          <h6>{{ content.name }}</h6>
          <h6 style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
